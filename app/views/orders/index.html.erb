<p id="notice">
  <%= notice %>
</p>
<h1>
  <%= "Orders for #{@date}" %>
</h1>
<div>
  <%= link_to "Previous Date", orders_path(date: @date - 1.day) %>
  |
  <%= link_to "Next Date", orders_path(date: @date + 1.day) %>
</div>
<hr/>
<% if @orders.any? %>
  <table>
    <thead>
      <tr>
        <th>Delivery time</th>
        <th>Status</th>
        <th>Customer</th>
        <th>Product</th>
        <th>Price</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= order.delivery_time %>
          </td>
          <td>
            <%= order.status %>
          </td>
          <td>
            <%= order.customer.name %>
          </td>
          <td>
            <%= order.product.name %>
          </td>
          <td>
            <%= number_to_currency order.product.price %>
          </td>
          <td>
            <%= link_to 'Show', order %>
          </td>
          <% if order.todo? %>
            <td>
               <%= render 'cancel_form',  :order => order %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>No orders for this day</h4>
<% end %>

<script type="text/javascript">
$(document).ready(function(){
  $(".cancel-order").click(function(){
    id = "cancelModal"+this.id.split('#')[1]
    $("#"+id).css("display", "block");

  });

  $('.close').click(function(){
     $('.modal').css("display", "none");

  })
});
</script>
