  <a id="cancelOrder#<%=order.id%>" class='cancel-order'>cancel</a>

  <div id="cancelModal<%=order.id%>" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <p>Reason to Cancel Order#<%=order.id%></p>
      
      <%= form_tag(cancel_order_path(order), :method => "post") do %>
        <%= label_tag(:comment, "Comment:") %>
        <%= text_area_tag(:comment)%>


        <%= submit_tag("Cancel") %>
      <% end %>
    </div>
  </div>